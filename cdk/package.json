{
  "name": "dvk",
  "version": "0.1.0",
  "bin": {
    "dvk": "bin/dvk.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "login": "aws sso login",
    "postlogin": "cdk-sso-sync $AWS_PROFILE",
    "deploy:image": "cdk --profile=$AWS_PROFILE deploy DvkBuildImageStack --require-approval never",
    "deploy:lambda": "cdk --profile=$AWS_PROFILE deploy DvkPipelineLambdaStack --require-approval never",
    "deploy:backend": "cdk --profile=$AWS_PROFILE deploy DvkBackendStack --require-approval never",
    "deploy:backend:hostswap": "cdk --profile=$AWS_PROFILE deploy DvkBackendStack --require-approval never --hotswap",
    "deploy:pipeline:dev": "cross-env ENVIRONMENT=dev cdk --profile=$AWS_PROFILE deploy DvkPipelineStack --require-approval never",
    "deploy:pipeline:test": "cross-env ENVIRONMENT=test cdk --profile=$AWS_PROFILE deploy DvkPipelineStack --require-approval never",
    "generate": "graphql-codegen",
    "log:backend": "aws logs tail --follow --since 1h /aws/lambda/$FUNC-$ENVIRONMENT",
    "dynamodb": "ts-node bin/dynamodb.ts"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.6.2",
    "@graphql-codegen/typescript": "^2.5.1",
    "@graphql-codegen/typescript-operations": "^2.4.2",
    "@types/jest": "^27.5.0",
    "@types/node": "10.17.27",
    "@types/prettier": "2.6.0",
    "aws-cdk": "2.27.0",
    "cdk-sso-sync": "0.0.6",
    "cross-env": "7.0.3",
    "eslint-import-resolver-typescript": "^3.1.1",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "~3.9.7"
  },
  "dependencies": {
    "@aws-cdk/aws-appsync-alpha": "2.29.1-alpha.0",
    "@aws-sdk/client-codepipeline": "^3.131.0",
    "@aws-sdk/client-dynamodb": "^3.131.0",
    "@aws-sdk/lib-dynamodb": "^3.131.0",
    "@types/aws-lambda": "^8.10.101",
    "aws-cdk-lib": "2.29.1",
    "constructs": "^10.0.0",
    "graphql": "^16.5.0",
    "pino": "^8.1.0",
    "source-map-support": "^0.5.21"
  }
}
