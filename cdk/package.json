{
  "name": "dvk",
  "version": "0.1.0",
  "bin": {
    "dvk": "bin/dvk.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "login": "aws sso login",
    "postlogin": "cdk-sso-sync $AWS_PROFILE",
    "deploy:image": "cdk --profile=$AWS_PROFILE deploy DvkBuildImageStack --require-approval never",
    "deploy:lambda": "cdk --profile=$AWS_PROFILE deploy DvkPipelineLambdaStack --require-approval never",
    "deploy:backend": "cdk --profile=$AWS_PROFILE deploy DvkBackendStack --require-approval never",
    "deploy:backend:hostswap": "cdk --profile=$AWS_PROFILE deploy DvkBackendStack --require-approval never --hotswap",
    "deploy:pipeline:dev": "cross-env ENVIRONMENT=dev cdk --profile=$AWS_PROFILE deploy DvkPipelineStack --require-approval never",
    "deploy:pipeline:test": "cross-env ENVIRONMENT=test cdk --profile=$AWS_PROFILE deploy DvkPipelineStack --require-approval never",
    "generate": "graphql-codegen",
    "log:backend": "aws logs tail --follow --since 1h /aws/lambda/$FUNC-$ENVIRONMENT",
    "datasync": "ts-node bin/datasync.ts",
    "setup": "ts-node bin/setup.ts",
    "ip": "public-ip"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.11.3",
    "@graphql-codegen/typescript": "^2.7.2",
    "@graphql-codegen/typescript-operations": "^2.5.2",
    "@types/jest": "^28.1.6",
    "@types/node": "18.6.4",
    "@types/prettier": "2.7.0",
    "aws-cdk": "2.35.0",
    "cdk-sso-sync": "0.0.6",
    "cross-env": "7.0.3",
    "eslint-import-resolver-typescript": "^3.4.0",
    "jest": "^28.1.3",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "typescript": "~4.7.4"
  },
  "dependencies": {
    "@aws-cdk/aws-appsync-alpha": "2.35.0-alpha.0",
    "@aws-sdk/client-cloudformation": "^3.145.0",
    "@aws-sdk/client-codepipeline": "^3.145.0",
    "@aws-sdk/client-dynamodb": "^3.145.0",
    "@aws-sdk/client-s3": "^3.145.0",
    "@aws-sdk/client-ssm": "^3.145.0",
    "@aws-sdk/lib-dynamodb": "^3.145.0",
    "@types/aws-lambda": "^8.10.101",
    "aws-cdk-lib": "2.35.0",
    "axios": "^0.27.2",
    "constructs": "^10.1.67",
    "graphql": "^16.5.0",
    "pino": "^8.4.0",
    "public-ip-cli": "^3.0.0",
    "source-map-support": "^0.5.21"
  }
}
