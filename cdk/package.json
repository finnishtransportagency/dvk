{
  "name": "dvk",
  "version": "0.1.0",
  "bin": {
    "dvk": "bin/dvk.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "login": "cross-env-shell aws sso login --profile $AWS_PROFILE",
    "postlogin": "cross-env-shell cdk-sso-sync $AWS_PROFILE",
    "deploy:image": "cross-env-shell cdk --profile=$AWS_PROFILE deploy DvkBuildImageStack --require-approval never",
    "deploy:lambda": "cross-env-shell cdk --profile=$AWS_PROFILE deploy DvkPipelineLambdaStack --require-approval never",
    "deploy:backend": "cross-env-shell cdk --profile=$AWS_PROFILE deploy DvkBackendStack --require-approval never",
    "deploy:backend:hotswap": "cross-env-shell cdk --profile=$AWS_PROFILE deploy DvkBackendStack --require-approval never --hotswap",
    "deploy:frontend": "cross-env-shell cdk --profile=$AWS_PROFILE deploy SquatSiteStack --require-approval never",
    "deploy:pipeline:dev": "cross-env ENVIRONMENT=dev cdk --profile=$AWS_PROFILE deploy DvkPipelineStack SquatPipelineStack --require-approval never",
    "deploy:pipeline:test": "cross-env ENVIRONMENT=test cdk --profile=$AWS_PROFILE deploy DvkPipelineStack SquatPipelineStack --require-approval never",
    "deploy:pipeline:prod": "cross-env ENVIRONMENT=prod cdk --profile=$AWS_PROFILE deploy DvkPipelineStack SquatPipelineStack --require-approval never",
    "deploy:image:prod": "cross-env ENVIRONMENT=prod cdk --profile=$AWS_PROFILE deploy DvkBuildImageStack --require-approval never",
    "deploy:site:dev": "cross-env ENVIRONMENT=dev cdk --profile=$AWS_PROFILE deploy SquatSiteStack --require-approval never",
    "deploy:site:test": "cross-env ENVIRONMENT=test cdk --profile=$AWS_PROFILE deploy SquatSiteStack --require-approval never",
    "generate": "graphql-codegen",
    "log:backend": "aws logs tail --follow --since 1h /aws/lambda/$FUNC-$ENVIRONMENT",
    "datasync": "ts-node bin/datasync.ts",
    "setup": "ts-node bin/setup.ts",
    "ip": "public-ip"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.13.1",
    "@graphql-codegen/typescript": "^2.7.3",
    "@graphql-codegen/typescript-operations": "^2.5.3",
    "@types/jest": "^29.0.3",
    "@types/node": "^18.7.23",
    "@types/prettier": "^2.7.1",
    "aws-cdk": "^2.43.1",
    "cdk-sso-sync": "0.0.6",
    "cross-env": "7.0.3",
    "esbuild": "^0.15.9",
    "eslint-import-resolver-typescript": "^3.5.1",
    "jest": "^29.1.1",
    "ts-jest": "^29.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@aws-cdk/aws-appsync-alpha": "^2.43.1-alpha.0",
    "@aws-sdk/client-cloudformation": "^3.180.0",
    "@aws-sdk/client-codepipeline": "^3.180.0",
    "@aws-sdk/client-dynamodb": "^3.180.0",
    "@aws-sdk/client-s3": "^3.180.0",
    "@aws-sdk/client-secrets-manager": "^3.180.0",
    "@aws-sdk/client-ssm": "^3.180.0",
    "@aws-sdk/lib-dynamodb": "^3.180.0",
    "@types/aws-lambda": "^8.10.106",
    "@types/geojson": "^7946.0.10",
    "aws-cdk-lib": "^2.43.1",
    "axios": "^0.27.2",
    "constructs": "^10.1.115",
    "graphql": "^16.6.0",
    "pino": "^8.6.1",
    "public-ip-cli": "^3.0.0",
    "source-map-support": "^0.5.21"
  }
}
